<div class="row">
  <div class="medium-3 small-12 columns">

    <h3>Personal Info</h3>
  </div>

  <div class="medium-9 small-12 columns">
    <div class="medium-8 large-9 medium-offset-4 large-offset-3 small-12 columns">
      <ul class="no-bullet">
        <% data.personal_info.each do |info| %>
            <li><span class="<%= info.icon %> icon"></span><strong><%= info.name %>:</strong> <%= info.value %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>